# ============================================
# AI Voice Customer Care - Configuration
# ============================================
# Copy this to .env and fill in your values
# NEVER commit .env to version control!

# ============================================
# DEPLOYMENT TYPE (Choose ONE)
# ============================================
DEPLOYMENT=local      # local, aws, or openai

# ============================================
# CUSTOMER CONFIGURATION
# ============================================
CUSTOMER_ID=1
CUSTOMER_NAME="My Company"
BOT_PORT=8001
NETWORK_NAME=customer_care_network

# ============================================
# SERVER CONFIGURATION
# ============================================
# Your server's public domain or IP address (for webhooks)
# Example: https://callcenter.mycompany.com or http://54.123.45.67
# Leave blank if deploying locally
BASE_URL=

# ============================================
# COMMUNICATION CHANNELS
# ============================================
# Telegram (required for all deployments)
TELEGRAM_BOT_TOKEN=

# Phone Integration (optional)
PHONE_PROVIDER=none              # none, twilio, or sip

# Twilio (if PHONE_PROVIDER=twilio)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# SIP Trunk (if PHONE_PROVIDER=sip)
SIP_PROVIDER=                    # telia, dna, elisa, or custom
SIP_USERNAME=
SIP_PASSWORD=
SIP_DOMAIN=
SIP_PROXY=

# ============================================
# LOCAL AI MODELS (if DEPLOYMENT=local)
# ============================================
USE_LOCAL_MODELS=true
LLM_MODEL=tinyllama
OLLAMA_BASE_URL=http://test_ollama:11434
LOCAL_VOICE_URL=http://test_voice:8001
LOCAL_EMBEDDING_MODEL=all-MiniLM-L6-v2
VOICE_MEMORY_LIMIT=3g
OLLAMA_MEMORY_LIMIT=2g

# ============================================
# AWS SERVICES (if DEPLOYMENT=aws)
# ============================================
USE_AWS_SERVICES=false
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_BEDROCK_MODEL_ID=anthropic.claude-3-haiku-20240307-v1:0
BEDROCK_MAX_TOKENS=1024
BEDROCK_TEMPERATURE=0.7
AWS_TRANSCRIBE_LANGUAGE=en-US
AWS_POLLY_VOICE_ID=Joanna
AWS_POLLY_ENGINE=neural
AWS_OPENSEARCH_ENDPOINT=
AWS_OPENSEARCH_INDEX=customer_qa

# ============================================
# OPENAI SERVICES (if DEPLOYMENT=openai)
# ============================================
USE_OPENAI=false
OPENAI_API_KEY=
OPENAI_MODEL=gpt-4
OPENAI_TTS_MODEL=tts-1
OPENAI_TTS_VOICE=alloy
OPENAI_WHISPER_MODEL=whisper-1
OPENAI_EMBEDDING_MODEL=text-embedding-3-large
OPENAI_EMBEDDING_DIMENSIONS=3072

# ============================================
# SAAS DASHBOARD (if using multi-tenant platform)
# ============================================
USE_SAAS=false
POSTGRES_PASSWORD=
POSTGRES_DB=saas_db
POSTGRES_USER=saas_user
POSTGRES_PORT=5432
SECRET_KEY=
JWT_SECRET_KEY=
DASHBOARD_PORT=5000
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# ============================================
# SHARED SETTINGS
# ============================================
ELASTICSEARCH_HOST=elasticsearch:9200
ELASTICSEARCH_INDEX=customer_qa
ES_MEMORY_LIMIT=512m
ES_PORT=9200
BOT_MEMORY_LIMIT=512m
PLATFORM_DOMAIN=localhost
NETWORK_NAME=customer_care_network
STT_TIMEOUT=120
TTS_TIMEOUT=120
LLM_TIMEOUT=120
LOG_LEVEL=INFO
